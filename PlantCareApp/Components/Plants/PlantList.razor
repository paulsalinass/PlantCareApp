@page "/plants"
@rendermode InteractiveServer

@inject PlantService PlantService
@inject HomeZoneService HomeZoneService

<section class="plant-dashboard">
    <div class="plant-hero-card">
        <div>
            <p class="eyebrow text-muted mb-1">Mis espacios</p>
            <h1 class="mb-2">Cuida tus plantas</h1>
            <p class="text-muted mb-0">Organiza por ambientes y cambia la vista entre tarjetas o slider como Plantin.</p>
        </div>
        <NavLink class="btn btn-pill btn-primary" href="/plants/add">
            <i class="bi bi-plus-circle me-2"></i> Agregar planta
        </NavLink>
    </div>

    <div class="zone-chip-bar">
        <button class="zone-chip @(SelectedZone is null ? "active" : null)" @onclick="() => SelectZone(null)">Todos</button>
        @foreach (var zone in zoneOptions)
        {
            <button class="zone-chip @(SelectedZone == zone.Name ? "active" : null)" @onclick="() => SelectZone(zone.Name)">
                @zone.Name
                <small>@GetPlantCount(zone.Name)</small>
            </button>
        }
    </div>

    <div class="view-toggle-wrapper">
        <small class="text-muted">Vista</small>
        <div class="btn-group-sm btn-group view-toggle">
            <button class="btn @(currentView == ViewMode.Grid ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => SetView(ViewMode.Grid)">
                <i class="bi bi-grid"></i>
            </button>
            <button class="btn @(currentView == ViewMode.Carousel ? "btn-primary" : "btn-outline-secondary")"
                    @onclick="() => SetView(ViewMode.Carousel)">
                <i class="bi bi-layout-sidebar-inset"></i>
            </button>
        </div>
    </div>
</section>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (isLoading)
{
    <p>Cargando...</p>
}
else if (!FilteredPlants.Any())
{
    <div class="alert alert-info">
        No encontramos plantas para el ambiente seleccionado.
    </div>
}
else
{
    if (currentView == ViewMode.Grid)
    {
        <div class="plant-grid">
            @foreach (var plant in FilteredPlants)
            {
                <div class="plant-card-modern">
                    <img src="@GetPhotoUrl(plant)" alt="@plant.Name" />
                    <div class="plant-card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="plant-name mb-0">@plant.Name</p>
                                <small class="text-muted">@plant.Species</small>
                            </div>
                            <span class="plant-badge @(plant.IsIndoors ? "indoors" : "outdoors")">
                                @(plant.IsIndoors ? "Interior" : "Exterior")
                            </span>
                        </div>
                        <p class="next-water">@GetNextWateringText(plant)</p>
                        <div class="plant-card-actions">
                            <NavLink href="@GetDetailsUrl(plant.Id)" class="ghost-btn">
                                Ver ficha
                            </NavLink>
                            <div class="icon-pill-group">
                                <NavLink href="@GetEditUrl(plant.Id)" class="icon-pill">
                                    <i class="bi bi-pencil"></i>
                                </NavLink>
                                <NavLink href="@GetDeleteUrl(plant.Id)" class="icon-pill danger">
                                    <i class="bi bi-trash"></i>
                                </NavLink>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="plant-carousel">
            @foreach (var plant in FilteredPlants)
            {
                <div class="carousel-card">
                    <img src="@GetPhotoUrl(plant)" alt="@plant.Name" />
                    <div class="carousel-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <p class="plant-name mb-0">@plant.Name</p>
                                <small class="text-muted">@plant.Species</small>
                            </div>
                            <span class="plant-badge @(plant.IsIndoors ? "indoors" : "outdoors")">
                                @(plant.IsIndoors ? "Interior" : "Exterior")
                            </span>
                        </div>
                        <p class="next-water">@GetNextWateringText(plant)</p>
                        <div class="carousel-actions">
                            <NavLink href="@GetDetailsUrl(plant.Id)" class="btn btn-pill btn-primary">Abrir ficha</NavLink>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    private enum ViewMode { Grid, Carousel }

    [SupplyParameterFromQuery] public string? Zone { get; set; }
    private readonly List<Plant> plants = new();
    private readonly List<HomeZone> zoneOptions = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? SelectedZone;
    private ViewMode currentView = ViewMode.Grid;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            plants.AddRange(await PlantService.GetPlantsAsync());
            zoneOptions.AddRange(await HomeZoneService.GetZonesAsync());

            if (!string.IsNullOrWhiteSpace(Zone))
            {
                SelectedZone = Zone;
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<Plant> FilteredPlants =>
        string.IsNullOrWhiteSpace(SelectedZone)
            ? plants
            : plants.Where(p => string.Equals(p.LocationArea, SelectedZone, StringComparison.OrdinalIgnoreCase));

    private void SelectZone(string? zone) => SelectedZone = zone;

    private void SetView(ViewMode mode) => currentView = mode;

    private int GetPlantCount(string zone) =>
        plants.Count(p => string.Equals(p.LocationArea, zone, StringComparison.OrdinalIgnoreCase));

    private static string GetNextWateringText(Plant plant)
    {
        var next = plant.NextWateringDate;
        if (next is null)
        {
            return "Aún no hay recordatorios configurados.";
        }

        var diff = (next.Value.Date - DateTime.Today).Days;
        if (diff < 0)
        {
            return $"Atrasado {Math.Abs(diff)} día(s)";
        }

        if (diff == 0)
        {
            return "Hoy toca regar";
        }

        return $"Riego en {diff} día(s)";
    }

    private static string GetPhotoUrl(Plant plant)
    {
        if (!string.IsNullOrEmpty(plant.MainPhotoPath))
        {
            return plant.MainPhotoPath.StartsWith("/", StringComparison.Ordinal)
                ? plant.MainPhotoPath
                : "/" + plant.MainPhotoPath;
        }

        return "/images/placeholder.svg";
    }

    private static string GetEditUrl(int id) => $"/plants/edit/{id}";
    private static string GetDetailsUrl(int id) => $"/plants/{id}";
    private static string GetDeleteUrl(int id) => $"/plants/delete/{id}";
}
