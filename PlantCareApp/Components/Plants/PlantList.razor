@page "/plants"
@rendermode InteractiveServer

@inject PlantService PlantService

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4 gap-3">
    <div>
        <h1 class="mb-1">Mis plantas</h1>
        <p class="text-muted mb-0">Gestiona tus plantas, fotos y recordatorios.</p>
    </div>
    <NavLink class="btn btn-success btn-lg" href="/plants/add">
        <i class="bi bi-plus-circle me-2"></i> Agregar planta
    </NavLink>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (isLoading)
{
    <p>Cargando...</p>
}
else if (!plants.Any())
{
    <div class="alert alert-info">
        @if (string.IsNullOrWhiteSpace(Zone))
        {
            <text>AÃºn no tienes plantas registradas.</text>
        }
        else
        {
            <span>No encontramos plantas en el ambiente <strong>@Zone</strong>. </span>
            <NavLink class="btn btn-link btn-sm" href="/plants">Mostrar todas</NavLink>
        }
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var plant in plants)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card plant-card h-100">
                    <img src="@GetPhotoUrl(plant)"
                         class="card-img-top"
                         alt="@plant.Name"
                         style="height: 220px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h5 class="card-title mb-0">@plant.Name</h5>
                            <span class="badge bg-@(plant.IsIndoors ? "success" : "info")">
                                @(plant.IsIndoors ? "Interior" : "Exterior")
                            </span>
                        </div>
                        <p class="text-muted mb-2">@plant.Species</p>

                        <div class="small text-muted mb-3">
                            @GetNextWateringText(plant)
                        </div>

                        <div class="mt-auto d-flex flex-column gap-2">
                            <NavLink class="btn btn-outline-secondary btn-sm" href="@GetDetailsUrl(plant.Id)">
                                <i class="bi bi-eye me-1"></i> Ver ficha
                            </NavLink>
                            <div class="d-flex gap-2">
                                <NavLink class="btn btn-outline-success btn-sm flex-fill" href="@GetEditUrl(plant.Id)">
                                    <i class="bi bi-pencil me-1"></i> Editar
                                </NavLink>
                                <NavLink class="btn btn-outline-danger btn-sm flex-fill" href="@GetDeleteUrl(plant.Id)">
                                    <i class="bi bi-trash me-1"></i> Eliminar
                                </NavLink>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [SupplyParameterFromQuery] public string? Zone { get; set; }
    private readonly List<Plant> plants = new();
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            plants.Clear();
            plants.AddRange(await PlantService.GetPlantsAsync());

            if (!string.IsNullOrWhiteSpace(Zone))
            {
                plants.RemoveAll(p => !string.Equals(p.LocationArea, Zone, StringComparison.OrdinalIgnoreCase));
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private static string GetNextWateringText(Plant plant)
    {
        var next = plant.NextWateringDate;
        if (next is null)
        {
            return "Aun no hay recordatorios configurados.";
        }

        var diff = (next.Value.Date - DateTime.Today).Days;
        if (diff < 0)
        {
            return $"ALERTA: atrasado {Math.Abs(diff)} dia(s)";
        }

        if (diff == 0)
        {
            return "Hoy toca regar";
        }

        return $"Proximo riego en {diff} dia(s)";
    }

    private static string GetPhotoUrl(Plant plant)
    {
        if (!string.IsNullOrEmpty(plant.MainPhotoPath))
        {
            return plant.MainPhotoPath.StartsWith("/", StringComparison.Ordinal)
                ? plant.MainPhotoPath
                : "/" + plant.MainPhotoPath;
        }

        return "/images/placeholder.svg";
    }

    private static string GetEditUrl(int id) => $"/plants/edit/{id}";
    private static string GetDetailsUrl(int id) => $"/plants/{id}";
    private static string GetDeleteUrl(int id) => $"/plants/delete/{id}";
}
